<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorPrimary"
    tools:context=".activities.ChoosePostOrEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select One to Edit"
            android:textSize="24sp" />

        <View
            android:id="@+id/view12"
            style="@style/Divider1"
            android:layout_width="match_parent"
            android:layout_marginBottom="30dp"
            android:background="@color/cardview_light_background" />

        <Button
            android:id="@+id/btn_edit_post"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_view_text_padding"
            android:background="@color/ColorPrimaryDark"
            android:text="post" />

        <Button
            android:id="@+id/btn_edit_notif"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_view_text_padding"
            android:background="@color/ColorPrimaryDark"
            android:text="Notification" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>